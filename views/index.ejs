
    <h1 class="text-5xl font-extrabold text-center mb-16 text-gray-800">
        Gedanken & Erkenntnisse
    </h1>
    
    <div class="grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-3"> 
        
        <% posts.forEach(function(post) { %>
            <article class="bg-white rounded-xl shadow-lg overflow-hidden transition duration-300 transform hover:scale-[1.02] hover:shadow-2xl">
                
                <div class="h-48 w-full bg-gray-200 flex items-center justify-center text-gray-500 font-semibold">
                    <img class="h-full w-full object-cover" src="<%= post.imageUrl || 'https://via.placeholder.com/600x400' %>" alt="Titelbild">
                </div>

                <div class="p-6">
                    <p class="text-sm text-blue-600 font-semibold uppercase mb-2">
                        <%= post.category || 'Allgemein' %>
                    </p>
                    
                    <h2 class="text-2xl font-bold text-gray-900 leading-snug">
                        <a href="/lesen/<%= post.id %>" class="hover:text-blue-700 transition">
                            <%= post.title %>
                        </a>
                    </h2>
                    
                    <p class="mt-3 text-gray-600 line-clamp-3">
                        <%= post.excerpt || 'Ein kurzer Auszug des Beitrags, der die Leser neugierig macht...' %>
                    </p>
                    
                    <a href="/lesen/<%= post.id %>" class="mt-4 inline-block text-base font-medium text-blue-600 hover:text-blue-800 transition">
                        Weiterlesen â†’
                    </a>
                </div>
            </article>
            <% }); %>

    </div>